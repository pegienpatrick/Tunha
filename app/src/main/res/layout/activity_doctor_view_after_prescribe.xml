<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backbutton"
        android:id="@+id/backbutton">

    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This information is to be written on the patient's book"
        android:layout_marginBottom="20dp">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Prescription Number:">

        </TextView>
        <TextView
            android:id="@+id/prescriptionnumber"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="prescription number here">
        </TextView>
    </LinearLayout>



        <TextView
            android:id="@+id/prescriptionDrug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prescridon namr-amoxillin">

        </TextView>
        <TextView
            android:id="@+id/prescriptionDose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="dosage">
        </TextView>
        <TextView
            android:id="@+id/prescriptionQuantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="approx tabs">
        </TextView>






</LinearLayout>