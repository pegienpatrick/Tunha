<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFBFB"
    android:gravity="center"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/indi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECF8F8"
        android:orientation="vertical"
        android:padding="5dp"
        >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"

                    android:text="DrugName" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.02"
                    android:gravity="center"
                    android:text=" : "

                    />
                <!--                            <TextView-->
                <!--                                android:text="thedrugname "-->
                <!--                                />-->
                <Spinner
                    android:id="@+id/drugname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:entries="@array/menu_options"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="dosage"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"
>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/drugnamedosage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FBFAFA"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_weight="0.02"
                    android:gravity="center"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"

                    android:text=" X " />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="timesa day"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"
>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/drugtimes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FBFAFA"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"

                    android:text="Total" />

                <TextView
                    android:layout_weight="0.02"
                    android:gravity="center"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"

                    android:text=" : " />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:hint="Total number"
                    android:paddingTop="10dp"
android:paddingBottom="10dp"
>

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/drugnametotalnumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FBFAFA"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>


            </TableRow>


        </TableLayout>


    </LinearLayout>

</LinearLayout>
